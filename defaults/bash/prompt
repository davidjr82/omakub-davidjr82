force_color_prompt=yes
color_prompt=yes

# PS1=$'\uf0a9 '
# PS1="\[\e]0;\w\a\]$PS1"

# Function to get the current Git branch with a trailing space
parse_git_branch() {
  local branch=$(git branch 2>/dev/null | grep '^*' | colrm 1 2)
  [ -n "$branch" ] && echo "[$branch] "  # Adds a space after the branch name
}

PS1="\A \w \[\e[1;32m\]\$(parse_git_branch)\[\e[0m\]\$ "
